<div class="form-title"><%= @action == "create" ? "Add" : "Edit" %> Course</div>
<%= form_for @course,url: {action: "#{@action}"}, id: "course-form" do |f| %>
  <div class="course-form">

    <% if @course.id.present? %>
      <%= f.hidden_field :id, value: @course.id, id: "id", require: true %>
    <% end %>
    <%= f.hidden_field :institution_id, value: @course.institution_id, id: "institution_id", require: true %>
    <label class="form-label" for="name">Name: </label>
    <%= f.text_field :name, value: @course.name, class: "form-control", id: "name", require: true %>

    <label class="form-label" for="description">Description: </label>
    <%= f.text_area :description, value: @course.description, class: "form-control", id: "description", require: true %>
    <br>
  </div>

<% end %>