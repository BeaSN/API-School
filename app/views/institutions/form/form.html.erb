<div class="form-title"><%= @action == "create" ? "Add" : "Edit" %> Institution</div>
<%= form_for @institution,url: {action: "#{@action}"}, id: "institutions-form", class: "reload-window-form" do |f| %>
  <div class="institutions-form">

    <% if @institution.id.present? %>
      <%= f.hidden_field :id, value: @institution.id, id: "id", require: true %>
    <% end %>
    <label class="form-label" for="name">Name: </label>
    <%= f.text_field :name, value: @institution.name, class: "form-control", id: "name", require: true %>

    <label class="form-label" for="address">Address: </label>
    <%= f.text_area :address, value: @institution.address, class: "form-control", id: "address", require: true %>
    <br>

    <label class="form-label" for="phone">Phone: </label>
    <%= f.text_field :phone, type: "tel", value: @institution.phone, class: "form-control", id: "phone", require: true %>
    <br>

    <%= f.label :color_1, "Cor 1" %>
    <%= f.color_field :color_1, type: :color %>

    <%= f.label :color_2, "Cor 2" %>
    <%= f.color_field :color_2, type: :color %>

    <%= f.label :color_3, "Cor 3" %>
    <%= f.color_field :color_3, type: :color %>

    <%= f.label :color_4, "Cor 4" %>
    <%= f.color_field :color_4, type: :color %>
  </div>

<% end %>