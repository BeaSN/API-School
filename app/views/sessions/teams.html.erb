        <a class="nav-link <% if @teams.first["id"] == team["id"] %>active<% end %>" id="<%= "#{team["name"].gsub(" ", "_")}_#{team["id"]}" %>-tab" data-bs-toggle="tab" href='<%= "##{team["name"].gsub(" ", "_")}_#{team["id"]}" %>' role="tab" aria-controls="<%= "#{team["name"].gsub(" ", "_")}_#{team["id"]}" %>" aria-selected="<%= @teams.first["id"] == team["id"] ? "true" : "false" %>"><%= team["name"] %></a>
      </li>
    <% end %>
  </ul>
  <div class="tab-content" id="myTabContent">
    <% @teams.each do |team| %>
      <div class="tab-pane fade <% if @teams.first["id"] == team["id"] %>show active<% end %>" id="<%= "#{team["name"].gsub(" ", "_")}_#{team["id"]}" %>" role="tabpanel" aria-labelledby="<%= "#{team["name"].gsub(" ", "_")}_#{team["id"]}" %>-tab">
