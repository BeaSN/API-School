<div class="form-title"><%= @action == "create" ? "Add" : "Edit" %> Student</div>
<%= form_for @student,url: {action: "#{@action}"}, id: "student-form" do |f| %>
  <div class="student-form">

    <% if @student.id.present? %>
    <%= f.hidden_field :id, value: @student.id, id: "id", require: true %>
      <% end %>
    <%= f.hidden_field :team_id, value: @student.team_id, id: "team_id", require: true %>
    <label class="form-label" for="name">Name: </label>
    <%= f.text_field :name, value: @student.name, class: "form-control", id: "name", require: true %>

    <label class="form-label" for="email">Email: </label>
    <%= f.email_field :email, value: @student.email, class: "form-control", id: "email", require: true %>

    <label class="form-label" for="birthday">Birthday: </label>
    <%= f.date_field :birthday, value: @student.birthday, class: "form-control", id: "birthday", require: true %>

  <% unless @action == "update" %>
    <label class="form-label" for="password">Password: </label>
    <%= f.password_field :password, value: @student.password, class: "form-control", id: "password", require: true %>

    <label class="form-label" for="password_confirmation">Password confirmation: </label>
    <%= f.password_field :password_confirmation, value: @student.password_confirmation, class: "form-control", id: "password_confirmation", require: true %>
    <% end %>
    <br>
  </div>
<% end %>