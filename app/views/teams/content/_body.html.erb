<div class="animated fadeIn">
  <!-- Widgets  -->
  <div class="row">
    <div class="col-sm-6 col-lg-3">
      <div class="card text-white" style="background-color: <%= @teams.first["institution"]["color_1"] %>">
        <div class="card-body d-flex justify-content-between">
          <div class="card-left pt-1 float-left">
            <h3 class="mb-0 fw-r">
              <span class="currency float-left mr-1"></span>
              <span class="date"><%= @teams.first["institution"]["name"] %></span>
            </h3>
            <p class="text-light mt-1 m-0">Institution</p>
          </div><!-- /.card-left -->

          <div class="card-right float-right text-end">
            <i class="icon fade-5 icon-lg pe-7s-culture"></i>
          </div><!-- /.card-right -->
        </div>
      </div>
    </div>
    <!--/.col-->

    <div class="col-sm-6 col-lg-3">
      <div class="card text-white" style="background-color: <%= @teams.first["institution"]["color_2"] %>">
        <div class="card-body d-flex justify-content-between">
          <div class="card-left pt-1 float-left">
            <h3 class="mb-0 fw-r">
              <span class="count float-left"><%= @teams.first["course"]["name"] %></span>
            </h3>
            <p class="text-light mt-1 m-0">Course</p>
          </div><!-- /.card-left -->

          <div class="card-right float-right text-end">
            <i class="icon fade-5 icon-lg pe-7s-notebook"></i>
          </div><!-- /.card-right -->
        </div>
      </div>
    </div>
    <!--/.col-->

    <div class="col-sm-6 col-lg-3">
      <div class="card text-white" style="background-color: <%= @teams.first["institution"]["color_3"] %>">
        <div class="card-body d-flex justify-content-between">
          <div class="card-left pt-1 float-left">
            <h3 class="mb-0 fw-r">
              <span class="count"><%= @teams.sum { |team| team["students"].count } %></span>
            </h3>
            <p class="text-light mt-1 m-0">Students</p>
          </div><!-- /.card-left -->

          <div class="card-right float-right text-end">
            <i class="icon fade-5 icon-lg pe-7s-user"></i>
          </div><!-- /.card-right -->
        </div>
      </div>
    </div>
    <!--/.col-->

    <div class="col-sm-6 col-lg-3">
      <div class="card text-white" style="background-color: <%= @teams.first["institution"]["color_4"] %>">
        <div class="card-body d-flex justify-content-between">
          <div class="card-left pt-1 float-left">
            <h3 class="mb-0 fw-r">
              <span class="count"><%= @teams.count %></span>
            </h3>
            <p class="text-light mt-1 m-0">Teams</p>
          </div><!-- /.card-left -->

          <div class="card-right float-right text-end">
            <i class="icon fade-5 icon-lg pe-7s-users"></i>
          </div><!-- /.card-right -->
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <ul class="nav nav-tabs" data-color="<%= @teams.first["institution"]["color_3"] %>" data-color-active="<%= @teams.first["institution"]["color_1"] %>" id="myTab" role="tablist">
    <% @teams.each do |team| %>
      <li class="nav-item" role="presentation">
        <a class="nav-link
          <% if @teams.first["id"] == team["id"] %>active
          <% end %>" id="<%= "#{team["name"].gsub(" ", "_")}_#{team["id"]}" %>-tab" data-bs-toggle="tab" href='<%= "##{team["name"].gsub(" ", "_")}_#{team["id"]}" %>' role="tab" aria-controls="<%= "#{team["name"].gsub(" ", "_")}_#{team["id"]}" %>" aria-selected="<%= @teams.first["id"] == team["id"] ? "true" : "false" %>"><%= team["name"] %></a>
      </li>
    <% end %>
  </ul>
  <div class="tab-content" id="myTabContent">
    <% @teams.each do |team| %>
      <div class="tab-pane fade
        <% if @teams.first["id"] == team["id"] %>show active
        <% end %>" id="<%= "#{team["name"].gsub(" ", "_")}_#{team["id"]}" %>" role="tabpanel" aria-labelledby="<%= "#{team["name"].gsub(" ", "_")}_#{team["id"]}" %>-tab">
        <div class="row mt-3">
          <div class="animated fadeIn">
            <div class="row">

              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <strong class="card-title">Students</strong>
                  </div>
                  <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                      <thead>
                      <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Birthday</th>
                      </tr>
                      </thead>
                      <tbody>
                      <% team["students"].each do |student| %>
                        <tr>
                          <td><%= student["name"] %></td>
                          <td><%= student["email"] %></td>
                          <td><%= student["birthday"].to_date.strftime("%d/%m/%Y") %></td>
                        </tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <strong class="card-title">Students</strong>
                  </div>
                  <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                      <thead>
                      <tr>
                        <th>Name</th>
                        <th>Description</th>
                      </tr>
                      </thead>
                      <tbody>
                      <% team["quizzes"].each do |quiz| %>
                        <tr>
                          <td><%= quiz["name"] %></td>
                          <td><%= quiz["description"] %></td>
                        </tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>


            </div>
          </div><!-- .animated -->
        </div>
      </div>
    <% end %>
  </div>
</div>


