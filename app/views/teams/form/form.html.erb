<div class="form-title"><%= @action == "create" ? "Add" : "Edit" %> Team</div>
<%= form_for @team,url: {action: "#{@action}"}, id: "team-form" do |f| %>
  <div class="team-form">

    <% if @team.id.present? %>
      <%= f.hidden_field :id, value: @team.id, id: "id", require: true %>
    <% end %>
    <%= f.hidden_field :course_id, value: @team.course_id, id: "team_id", require: true %>
    <label class="form-label" for="name">Name: </label>
    <%= f.text_field :name, value: @team.name, class: "form-control", id: "name", require: true %>

  </div>

<% end %>